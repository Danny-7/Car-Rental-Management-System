<!DOCTYPE html>
<html style="min-height: 100vh;">
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}RentCar | Accueil
			{% endblock %}
		</title>
		{% block stylesheets %}
			<style>

			</style>
			<link rel="stylesheet" href="https://bootswatch.com/4/lux/bootstrap.min.css">
			<link rel="stylesheet" href="{{ asset('assets/css/main.css') }}">
			<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css" integrity="sha256-+N4/V/SbAFiW1MPBCXnfnP9QSN3+Keu+NlB+0ev/YKQ=" crossorigin="anonymous"/>
		{% endblock %}
	</head>
	<body style="min-height: 100%;">
		{% block body %}
			<nav class="navbar navbar-expand-lg navbar-dark bg-primary position-sticky fixed-top">
				<a class="navbar-brand" href="{{ path('home') }}">RentCar</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01" aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarColor01">
					<ul class="navbar-nav mr-auto">
						<li class="nav-item">
							<a class="nav-link" href="{{ path('cars') }}">Nos véhicules</a>
						</li>
						{% if is_granted('IS_AUTHENTICATED_FULLY') %}
							<li class="nav-item">
								<a class="nav-link" href="{{ path('user.space') }}">Mon espace</a>
							</li>
						{% endif %}
					</ul>

					<form class="form-inline my-2 my-lg-0">
						{% if is_granted('IS_ANONYMOUS') %}
							<a class="btn btn-primary" href={{ path('app.register') }}>Créer un compte</a>

							<a class="btn btn-primary" href={{ path('app.login') }}>Se connecter</a>
						{% else %}
							<li class="nav-item mx-3" style="color: #fff; list-style-type: none">
								Bienvenue, {{app.user.name}}
							</li>
							<a href="{{path('cart')}}" class="nav-link cart position-relative d-inline-flex" aria-label="View your shopping cart" style="color: #fff;">
								{% set cart = app.session.get('cart') %}
								{% set length = cart ? cart | length : 0 %}
								<i class="fas fa-shopping-cart fa-lg"></i>
								<span class='badge badge-pill cart-count'>{{ length }}</span>
							</a>
							<a class="btn btn-primary" href={{ path('app.logout') }}>Se déconnecter</a>
						{% endif %}
					</form>
				</div>
			</nav>
			<div style="height: calc(100vh - 70px);">
				{% block content %}{% endblock %}
				{# we'll put here the content of the page #}
			</div>

		{% endblock %}
		{% block javascripts %}{% endblock %}
	</body>
</html></body></html>
