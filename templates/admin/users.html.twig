{% extends 'admin/index.html.twig' %}

{% block title %}
    Les utilisateurs
{% endblock %}

{% block dashboard %}
    <div class="container-fluid h-100">
        <div>
            <table class="table">
                <thead>
                <tr>
                    <th>Nom</th>
                    <th>Adresse email</th>
                    <th>Role</th>
                </tr>
                </thead>
                <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.name }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% if user.role == 'ROLE_CLIENT' %}
                                Entreprise
                            {% elseif user.role == 'ROLE_RENTER' %}
                                Loueur
                            {% else %}
                                Administrateur
                            {% endif %}
                        </td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}

