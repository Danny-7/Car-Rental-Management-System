{% extends 'base.html.twig' %}

{% block title %} Nos voitures {% endblock %}

{% block content %}

    <div class="container-fluid">
        <div class="cars d-flex mx-auto justify-content-between flex-wrap" style="width: 80%">
            {% for car in cars %}
                <div class="card" style="width: 400px; margin: 1em auto">
                    <img class="card-img-top" src="{{asset('uploads/cars/')}}{{ car.image }}" alt="{{ car.type }}" style="object-fit: contain;">
                    <div class="card-body">
                        <a href="{{ path('car.show', {id : car.id}) }}" class=""card-title>{{ car.type }}</a>
                        <h5 class="title">{{car.amount}}</h5>
                        <p class="card-text">GGGG</p>
                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                            <a href="{{ path('car.rent', {id : car.id}) }}" class="btn btn-primary">Louer</a>
                        {% else %}
                            <a href="{{ path('car.show', {id : car.id}) }}" class="btn btn-primary">En savoir plus</a>
                        {% endif %}
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

{% endblock %}
